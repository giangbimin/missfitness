<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Postname</th>
      <th>Metakeywords</th>
      <th>Metadescription</th>
      <th>Metaurl</th>
      <th>Metaimage</th>
      <th>Content</th>
      <th>Hide</th>
      <th>Home</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.postname %></td>
        <td><%= post.metakeywords %></td>
        <td><%= post.metadescription %></td>
        <td><%= post.metaurl %></td>
        <td><%= post.metaimage %></td>
        <td><%= raw post.content %></td>
        <td><%= post.hide %></td>
        <td><%= post.home %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
